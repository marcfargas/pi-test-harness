{
  "name": "@marcfargas/pi-test-harness",
  "version": "0.4.0",
  "description": "Test harness for pi extensions â€” playbook-based model mocking, session testing, sandbox install verification",
  "author": "Marc Fargas",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcfargas/pi-test-harness.git"
  },
  "keywords": [
    "pi",
    "pi-package",
    "testing",
    "test-harness",
    "mock",
    "playbook"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "dist/**/*.js.map",
    "src/**/*.ts",
    "src/**/*.mjs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node -e \"require('fs').copyFileSync('src/mock-pi-script.mjs','dist/mock-pi-script.mjs')\"",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ __tests__/"
  },
  "peerDependencies": {
    "@mariozechner/pi-coding-agent": ">=0.50.0",
    "@mariozechner/pi-ai": "*",
    "@mariozechner/pi-agent-core": "*"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@mariozechner/pi-agent-core": "*",
    "@mariozechner/pi-ai": "*",
    "@mariozechner/pi-coding-agent": ">=0.50.0",
    "eslint": "^9.27.0",
    "globals": "^16.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.4"
  }
}
